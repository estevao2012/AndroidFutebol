<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Menu -->
    <style name="menu">
        <item name="android:layout_width">@dimen/navigation_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="item_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_button</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/margin_item_menu</item>
    </style>

    <!-- Adapter -->
    <style name="adItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">4</item>
        <item name="android:background">@drawable/item_button</item>
        <item name="android:padding">@dimen/margin_item_adapter</item>
    </style>

    <style name="adItem_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="adItem_txt.Name">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="adItem_txt.Sigla">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Players -->
    <style name="detailTeam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">4</item>
        <item name="android:padding">@dimen/margin_item_detail</item>
    </style>

    <style name="itemDetailTeam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item> 
        <item name="android:textSize">12sp</item>
    </style>

    <style name="itemDetailTeam.label"> 
        <item name="android:textColor">#000</item>
        <item name="android:gravity">right</item>
    </style>
    
    <style name="headerPlayerList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">3</item>
        <item name="android:background">#c9c9c9</item> 
        <item name="android:paddingLeft">@dimen/margin_item_adapter</item>
        <item name="android:paddingRight">@dimen/margin_item_adapter</item> 
    </style>
    
    <style name="itemHeaderPlayerList"> 
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item> 
        <item name="android:layout_weight">1</item>  
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">11sp</item> 
    </style>

</resources>